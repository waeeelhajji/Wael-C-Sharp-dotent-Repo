@model Association

<h2> Add Actors to movies</h2>

<form action="/association/add" method="post">
    <div class="form-group">
        <label for="ActorId"> Actor</label>
        <select asp-for="ActorId" class="form-control">
            @foreach (Actor a in ViewBag.AllActors)
            {
                <option value="@a.ActorId">@a.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="MovieId"> Actor</label>
        <select asp-for="MovieId" class="form-control">
            @foreach (Movie m in ViewBag.AllMovies)
            {
                <option value="@m.MovieId">@m.Title</option>
            }
        </select>
    </div>
    <input type="submit" value="Add Role" class="btn btn-primary">


</form>